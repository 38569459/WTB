<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/develop_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/develop_textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save: " />

            <Button
                android:id="@+id/develop_saveall"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="saveAll"
                android:text="All"
                android:textSize="12sp" />

            <Button
                android:id="@+id/develop_savedata"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="saveData"
                android:text="Data"
                android:textSize="12sp" />

            <Button
                android:id="@+id/develop_savesettings"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="saveSettings"
                android:text="Settings"
                android:textSize="12sp" />

            <Button
                android:id="@+id/develop_savelog"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="saveLog"
                android:text="Log"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/develop_textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear: " />

            <Button
                android:id="@+id/develop_clearall"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clearAll"
                android:text="All"
                android:textSize="12sp" />

            <Button
                android:id="@+id/develop_cleardata"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clearData"
                android:text="Data"
                android:textSize="12sp" />

            <Button
                android:id="@+id/develop_clearsettings"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearSettings"
                android:text="Settings"
                android:textSize="12sp" />

            <Button
                android:id="@+id/develop_clearlog"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clearLog"
                android:text="Log"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/develop_showlog"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showLog"
            android:text="Show Log" />

    </LinearLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/develop_navigationview"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    app:headerLayout="@layout/navigation_header"
    app:menu="@menu/navigation_menu" />

</android.support.v4.widget.DrawerLayout>





